<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tool="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            tool:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/tv_item_album_details_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"/>
    <TextView
            tool:text="shut this down"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_album_details_title"
            app:layout_constraintStart_toEndOf="@+id/tv_item_album_details_number"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_item_album_details_artist"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" android:layout_marginEnd="16dp"/>
    <TextView
            tool:text="Prince, Judith Hill"
            android:layout_width="0dp"
            android:textColor="@color/colorTextGray"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_album_details_artist"
            app:layout_constraintStart_toEndOf="@id/tv_item_album_details_number"
            app:layout_constraintTop_toBottomOf="@id/tv_item_album_details_title"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>